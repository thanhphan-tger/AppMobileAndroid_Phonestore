<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Register">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/skull"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="190dp"
            android:text="register"
            android:textAlignment="center"
            android:textSize="80dp"
            android:fontFamily="@font/vanila_text"
            android:textColor="@color/white"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp">

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_rounded_border">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/user"/>

            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6B158F"
                android:fontFamily="@font/gothic"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:hint="Username"
                android:inputType="textAutoComplete"
                android:id="@+id/username_input"
                android:textColorHint="#a4a4ab"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_rounded_border">

            <ImageView
                android:layout_marginTop="12dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/email"/>

            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6B158F"
                android:fontFamily="@font/gothic"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:id="@+id/email_input"
                android:textColorHint="#a4a4ab"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="160dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_rounded_border">

            <ImageView
                android:layout_marginTop="12dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/password"/>

            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6B158F"
                android:fontFamily="@font/gothic"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:hint="Password"
                android:textColorHint="#a4a4ab"
                android:inputType="textPassword"
                android:id="@+id/password_input"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="230dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_rounded_border">

            <ImageView
                android:layout_marginTop="12dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/confirm"/>

            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6B158F"
                android:fontFamily="@font/gothic"
                android:textSize="30dp"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:hint="Confirm password"
                android:textColorHint="#a4a4ab"
                android:inputType="textPassword"
                android:id="@+id/confirmpassword_input"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="300dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/purple_rounded_border"
            android:id="@+id/register_button"
            android:text="REGISTER"
            android:textSize="30dp"
            android:fontFamily="@font/vanila_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Already have an account ?"
            android:textAlignment="center"
            android:textSize="25dp"
            android:fontFamily="@font/gothic"
            android:layout_marginTop="360dp"
            android:textColor="@color/white"
            android:onClick="redirect_login"
            android:clickable="true"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>